<div class="card" id="orderProductsPanel">
  <div class="card-header">
    <h3 class="card-header-title">
      {{ 'PrintApp Customizations'|trans({}, 'Admin.Global') }} (<span >{{ products|length }}</span>)
    </h3>
  </div>

  <div class="card-body">
    <div class="spinner-order-products-container" id="orderProductsLoading">
      <div class="spinner spinner-primary"></div>
    </div>
    
    <table class="table" >
      <thead>
      <tr>
        <th>
          <p class="mb-0">{{ 'Product'|trans({}, 'Admin.Global') }}</p>
        </th>
        <th col>
          <p class="mb-0">{{ 'Preview'|trans({}, 'Admin.Global') }}</p>
        </th>
        <th>
          <p class="mb-0">{{ 'Links'|trans({}, 'Admin.Global') }}</p>
        </th>
      </tr>
      </thead>
      <tbody>
        {{ dump() }}
        {% for product in products %}
            {% if product is not null %}
              {% if product.print_dot_app_customization is defined and product.print_dot_app_customization is not null %}
                <tr class="order-product-customization">
                  <td class="border-top-0">{{ product.product_name }}</td>
                  <td>
                      <img src="https://pitchprint.io/previews/{{ product.print_dot_app_customization.projectId }}_1.jpg" width="120px"/>
                  </td>
                  <td  class="border-top-0 text-muted">
                     <div><a target="_blank" href="{{ product.print_dot_app_customization.links.pdf }}">Download PDF</div>
                     <div><a target="_blank" href="{{ product.print_dot_app_customization.links.png }}">Download PNG</div>
                     <div><a target="_blank" href="{{ product.print_dot_app_customization.links.jpg }}">Download JPEG</div>
                  </td>
                </tr>
              {% endif %}
            {% endif %}
        {% endfor %}
      </tbody>
    </table>

    
  </div>
</div>


